<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/holo_purple"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:background="#0021AC"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="@string/solar_station_n_constructor_mk_1"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="@string/choose_your_electric_devices_in_home_n_and_we_will_offer_how_many_solar_panels_are_needed"
                android:textSize="12sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/lamp1"
                android:layout_weight="1">

            </ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tv2"
                android:layout_weight="1">

            </ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/kettle1"
                android:layout_weight="1">
            </ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/oven1"
                android:layout_weight="1">

            </ImageView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/lamp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="~60W">

            </CheckBox>
            <CheckBox
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="~300W">

            </CheckBox>
            <CheckBox
                android:id="@+id/kettle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="~1500W">

            </CheckBox>
            <CheckBox
                android:id="@+id/oven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="~2000W">

            </CheckBox>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat"
                android:buttonTint="@color/FireBirdtheme"
                android:layout_weight="1"
                android:text="@string/do_you_have_connection_to_central_grid" />

            <CheckBox
                android:id="@+id/checkbattery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:fontFamily="@font/montserrat"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:buttonTint="@color/FireBirdtheme"
                android:text="@string/will_energy_be_consumed_at_night" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/total_power_consumption_of_other_devices_watt">

            </TextView>

            <EditText
                android:id="@+id/inputAdditional"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/e_g_2500"
                android:inputType="number"
                >

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/constructView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:hint="...">

            </TextView>

            <Button
                android:id="@+id/toconstruct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/TextOnDashboard"
                android:background="@color/MiddleBLue"
                android:text="@string/to_construct">

            </Button>


        </LinearLayout>

    </LinearLayout>








</ScrollView>